{
  "appId": "com.albchu.scan-chop",
  "productName": "Scan Chop",
  "directories": {
    "output": "release",
    "buildResources": "build-resources"
  },
  "files": [
    "dist/**/*",
    "node_modules/**/*",
    "package.json",
    "!**/node_modules/**/{test,__tests__,tests,coverage,debug-output}/**",
    "!**/node_modules/**/*.{ts,tsx,map}",
    "!**/node_modules/**/{tsconfig*.json,vitest.config.*,.turbo}",
    "!**/node_modules/@workspace/**/src/**",
    "!**/*.d.ts.map"
  ],
  "extraMetadata": {
    "main": "dist/main.js"
  },
  "mac": {
    "category": "public.app-category.productivity",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ]
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ]
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      }
    ],
    "category": "Office"
  }
}
